{
  "name": "pocketcloud",
  "version": "1.0.0",
  "description": "PocketCloud encrypts your files automatically on external USB storage with zero cloud dependencies",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "start": "npm run start --workspace=backend",
    "start:backend": "npm run start --workspace=backend",
    "start:frontend": "npm run dev --workspace=frontend",
    "build": "npm run build --workspace=frontend",
    "test": "npm run test --workspace=backend",
    "install:all": "npm install && npm install --workspace=backend && npm install --workspace=frontend",
    "status": "npm run status --workspace=backend",
    "setup": "bash setup.sh",
    "health": "bash tools/check-pocketcloud.sh"
  },
  "keywords": [
    "personal-cloud",
    "raspberry-pi",
    "offline-storage",
    "encryption",
    "zero-knowledge",
    "usb-storage"
  ],
  "author": "PocketCloud Project",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "fs-extra": "^11.3.3",
    "multer": "^2.0.2",
    "sql.js": "^1.13.0",
    "tar": "^7.5.7"
  }
}
